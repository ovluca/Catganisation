<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ImageView
        android:id="@+id/breed_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/details_image_height"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/breed_name"
        android:layout_width="wrap_content"
        android:text="gdsafasdfsda"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/breed_country_code"
        android:layout_width="wrap_content"
        android:text="gdsafasdfsda"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/breed_temperament"
        android:layout_width="wrap_content"
        android:text="gdsafasdfsda"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/breed_description"
        android:layout_width="wrap_content"
        android:text="gdsafasdfsda"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/breed_wikipedia_url"
        android:layout_width="wrap_content"
        android:text="gdsafasdfsda"
        android:layout_height="wrap_content" />

</LinearLayout>